<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.leaguechampions"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".core.LeagueChampions"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ChampionsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ChampionDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SettingsActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="API_KEY"/>
        <meta-data
            android:name="com.leaguechampions.com.leaguechampions.com.leaguechampions.utils.glide.GlideConfiguration"
            android:value="GlideModule"/>
    </application>
</manifest>